<UserControl  x:Class="HelloAvalonia.MainView"
			  xmlns="https://github.com/avaloniaui"
			  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			  x:Name="MainView">
	<StackPanel HorizontalAlignment="Center">
		<Label Content="{Binding Greeting}"/>
		<Button Command="{Binding GreetWithClickCounter}"
				HorizontalAlignment="Center">Click me</Button>
		<Label></Label>
	</StackPanel>
</UserControl>
